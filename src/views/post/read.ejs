<div class="row">
    <div class="col-12">
        <div style="
            background: url('https://source.unsplash.com/random/800x300/?<%= post.categories %>'); 
            height: 300px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            border-radius: 10px;
            ">
        </div>
    </div> 
    <div class="col-12 text-center">
        <h2> <%= post.title %> </h2>
    </div>
    <div class="col-12 text-center">
        <h5> <%= post.caption %></h5>
    </div>
    <div class="col-12 text-center">
        <p> <%= post.content %> </p>
    </div>
</div>